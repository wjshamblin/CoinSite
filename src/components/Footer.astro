---
import { SITE_TITLE } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-container">
		<div class="footer-main">
			<div class="footer-brand">
				<a href="/" class="footer-logo">
					<img src="/images/lordmarcovan-avatar.jpg" alt="Lord Marcovan" class="footer-avatar" />
					<span class="logo-text">{SITE_TITLE}</span>
				</a>
				<p class="footer-tagline">
					Exploring the artistry and history of numismatics through carefully curated collections.
				</p>
			</div>

			<nav class="footer-nav">
				<div class="footer-nav-group">
					<h4>Collections</h4>
					<ul>
						<li><a href="/collections">Browse All</a></li>
						<li><a href="/collections">Ancient Coins</a></li>
						<li><a href="/collections">Medieval Coins</a></li>
						<li><a href="/collections">Modern Coins</a></li>
					</ul>
				</div>

				<div class="footer-nav-group">
					<h4>Resources</h4>
					<ul>
						<li><a href="/blog">Blog</a></li>
						<li><a href="/about">About</a></li>
					</ul>
				</div>
			</nav>
		</div>

		<div class="footer-bottom">
			<p class="copyright">
				&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.
			</p>
		</div>
	</div>
</footer>

<style>
	footer {
		background: var(--navy);
		color: rgba(255, 255, 255, 0.9);
		margin-top: auto;
	}

	.footer-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 4rem 2rem 2rem;
	}

	.footer-main {
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
		padding-bottom: 3rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	@media (min-width: 768px) {
		.footer-main {
			grid-template-columns: 1.5fr 1fr;
		}
	}

	.footer-brand {
		max-width: 400px;
	}

	.footer-logo {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: white;
		margin-bottom: 1rem;
	}

	.footer-avatar {
		width: 40px;
		height: 40px;
		border-radius: 50%;
		object-fit: cover;
		border: 2px solid var(--gold);
	}

	.footer-logo .logo-text {
		font-family: Georgia, "Times New Roman", serif;
		font-size: 1.5rem;
		font-weight: 700;
	}

	.footer-tagline {
		color: rgba(255, 255, 255, 0.7);
		font-size: 0.9375rem;
		line-height: 1.6;
		margin: 0;
	}

	.footer-nav {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
	}

	.footer-nav-group h4 {
		font-family: system-ui, -apple-system, sans-serif;
		font-size: 0.8125rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--gold);
		margin-bottom: 1rem;
	}

	.footer-nav-group ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-nav-group li {
		margin-bottom: 0.625rem;
	}

	.footer-nav-group a {
		color: rgba(255, 255, 255, 0.7);
		font-size: 0.9375rem;
		text-decoration: none;
		transition: color var(--transition-fast);
	}

	.footer-nav-group a:hover {
		color: var(--gold);
	}

	.footer-bottom {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		padding-top: 2rem;
		text-align: center;
	}

	@media (min-width: 768px) {
		.footer-bottom {
			flex-direction: row;
			justify-content: space-between;
		}
	}

	.footer-bottom p {
		margin: 0;
		font-size: 0.875rem;
		color: rgba(255, 255, 255, 0.5);
	}

	.footer-bottom a {
		color: var(--gold);
		text-decoration: none;
	}

	.footer-bottom a:hover {
		text-decoration: underline;
	}
</style>
