---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { checkAuth } from '../lib/authMiddleware';

// Check if user is authenticated (don't redirect, just check)
const user = await checkAuth(Astro);
const isAuthenticated = !!user;
---

<header>
	<div class="header-container">
		<a href="/" class="logo">
			<span class="logo-icon">
				<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" width="28" height="28">
					<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5"/>
					<circle cx="12" cy="12" r="7" stroke="currentColor" stroke-width="1"/>
					<text x="12" y="16" text-anchor="middle" fill="currentColor" font-size="8" font-weight="bold">LM</text>
				</svg>
			</span>
			<span class="logo-text">{SITE_TITLE}</span>
		</a>

		<button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
			<span class="hamburger"></span>
		</button>

		<nav class="main-nav" aria-label="Main navigation">
			<div class="nav-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/collections">Collections</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>

			<div class="nav-actions">
				{isAuthenticated && (
					<>
						<HeaderLink href="/admin" class="nav-admin">Admin</HeaderLink>
						<HeaderLink href="/admin/logout" class="nav-logout">Logout</HeaderLink>
					</>
				)}
			</div>
		</nav>
	</div>
</header>

<script>
	const toggle = document.querySelector('.mobile-menu-toggle');
	const nav = document.querySelector('.main-nav');
	const header = document.querySelector('header');

	toggle?.addEventListener('click', () => {
		const isOpen = nav?.classList.toggle('is-open');
		toggle.setAttribute('aria-expanded', String(isOpen));
	});

	// Close menu when clicking outside
	document.addEventListener('click', (e) => {
		if (!header?.contains(e.target as Node)) {
			nav?.classList.remove('is-open');
			toggle?.setAttribute('aria-expanded', 'false');
		}
	});

	// Scroll effect
	let lastScroll = 0;
	window.addEventListener('scroll', () => {
		const currentScroll = window.scrollY;
		if (currentScroll > 50) {
			header?.classList.add('scrolled');
		} else {
			header?.classList.remove('scrolled');
		}
		lastScroll = currentScroll;
	});
</script>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(254, 252, 243, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(212, 175, 55, 0.1);
		transition: all var(--transition-base);
	}

	header.scrolled {
		background: rgba(254, 252, 243, 0.98);
		box-shadow: var(--shadow-md);
	}

	.header-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0.875rem 1.5rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: var(--navy);
		transition: opacity var(--transition-fast);
	}

	.logo:hover {
		opacity: 0.8;
	}

	.logo-icon {
		color: var(--gold);
	}

	.logo-text {
		font-family: Georgia, "Times New Roman", serif;
		font-size: 1.35rem;
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	.main-nav {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.nav-links :global(a) {
		padding: 0.5rem 1rem;
		color: var(--navy);
		font-size: 0.9375rem;
		font-weight: 500;
		border-radius: 6px;
		transition: all var(--transition-fast);
		text-decoration: none;
	}

	.nav-links :global(a:hover) {
		background: rgba(212, 175, 55, 0.1);
		color: var(--gold-dark);
	}

	.nav-links :global(a.active) {
		background: rgba(212, 175, 55, 0.15);
		color: var(--gold-dark);
	}

	.nav-actions {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding-left: 1.5rem;
		border-left: 1px solid rgba(0, 0, 0, 0.1);
	}

	.nav-actions:empty {
		display: none;
	}

	.nav-actions :global(a) {
		padding: 0.5rem 1rem;
		font-size: 0.875rem;
		font-weight: 500;
		border-radius: 6px;
		transition: all var(--transition-fast);
		text-decoration: none;
	}

	.nav-actions :global(a.nav-admin) {
		color: var(--navy);
	}

	.nav-actions :global(a.nav-admin:hover) {
		background: rgba(0, 0, 0, 0.05);
	}

	.nav-actions :global(a.nav-logout) {
		color: #991b1b;
	}

	.nav-actions :global(a.nav-logout:hover) {
		background: rgba(153, 27, 27, 0.1);
	}

	/* Mobile menu toggle */
	.mobile-menu-toggle {
		display: none;
		padding: 0.5rem;
		background: none;
		border: none;
		cursor: pointer;
	}

	.hamburger {
		display: block;
		position: relative;
		width: 24px;
		height: 2px;
		background: var(--navy);
		transition: background var(--transition-fast);
	}

	.hamburger::before,
	.hamburger::after {
		content: '';
		position: absolute;
		left: 0;
		width: 24px;
		height: 2px;
		background: var(--navy);
		transition: transform var(--transition-fast);
	}

	.hamburger::before {
		top: -7px;
	}

	.hamburger::after {
		top: 7px;
	}

	/* Mobile styles */
	@media (max-width: 768px) {
		.header-container {
			padding: 0.75rem 1rem;
		}

		.mobile-menu-toggle {
			display: block;
		}

		.main-nav {
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: rgba(254, 252, 243, 0.98);
			backdrop-filter: blur(10px);
			flex-direction: column;
			gap: 1rem;
			padding: 1rem;
			border-bottom: 1px solid rgba(212, 175, 55, 0.2);
			box-shadow: var(--shadow-lg);
			opacity: 0;
			visibility: hidden;
			transform: translateY(-10px);
			transition: all var(--transition-base);
		}

		.main-nav.is-open {
			opacity: 1;
			visibility: visible;
			transform: translateY(0);
		}

		.nav-links {
			flex-direction: column;
			width: 100%;
			gap: 0;
		}

		.nav-links :global(a) {
			width: 100%;
			padding: 0.875rem 1rem;
			border-radius: 8px;
		}

		.nav-actions {
			width: 100%;
			padding-left: 0;
			padding-top: 1rem;
			border-left: none;
			border-top: 1px solid rgba(0, 0, 0, 0.1);
			flex-direction: column;
			gap: 0;
		}

		.nav-actions :global(a) {
			width: 100%;
			padding: 0.875rem 1rem;
		}

		/* Hamburger animation when open */
		.mobile-menu-toggle[aria-expanded="true"] .hamburger {
			background: transparent;
		}

		.mobile-menu-toggle[aria-expanded="true"] .hamburger::before {
			transform: rotate(45deg) translate(5px, 5px);
		}

		.mobile-menu-toggle[aria-expanded="true"] .hamburger::after {
			transform: rotate(-45deg) translate(5px, -5px);
		}
	}
</style>
