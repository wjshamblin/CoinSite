---
interface Props {
  type?: 'submit' | 'button' | 'reset';
  variant?: 'primary' | 'outline' | 'danger' | 'success';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const {
  type = 'button',
  variant = 'primary',
  size = 'md',
  href,
  class: className
} = Astro.props;

const isLink = !!href;
---

{isLink ? (
  <a
    href={href}
    class:list={['btn', `btn-${variant}`, `btn-${size}`, className]}
  >
    <slot />
  </a>
) : (
  <button
    type={type}
    class:list={['btn', `btn-${variant}`, `btn-${size}`, className]}
  >
    <slot />
  </button>
)}

<style>
  .btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    border: 1px solid transparent;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
    font-family: inherit;
    text-align: center;
  }

  .btn:hover {
    opacity: 0.9;
  }

  /* Variants */
  .btn-primary {
    background: #007bff;
    border-color: #007bff;
  }

  .btn-primary:hover {
    background: #0056b3;
    border-color: #0056b3;
  }

  .btn-outline {
    background: transparent;
    color: #007bff;
    border-color: #007bff;
  }

  .btn-outline:hover {
    background: #007bff;
    color: white;
  }

  .btn-danger {
    background: #dc3545;
    border-color: #dc3545;
  }

  .btn-danger:hover {
    background: #c82333;
    border-color: #c82333;
  }

  .btn-success {
    background: #28a745;
    border-color: #28a745;
  }

  .btn-success:hover {
    background: #218838;
    border-color: #218838;
  }

  /* Sizes */
  .btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.8rem;
  }

  .btn-md {
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
  }

  .btn-lg {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
  }
</style>
