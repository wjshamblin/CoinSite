---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import ImageUploadField from '../../../../components/admin/ImageUploadField.astro';
import HtmlEditor from '../../../../components/admin/HtmlEditor.astro';
export const prerender = false; // Enable server-side rendering for authentication

import { db, Collections, Coins, eq } from 'astro:db';
import { getImageUrl } from '../../../../lib/images';
import { requireAuth, isRedirect } from '../../../../lib/authMiddleware';
import { generateCsrfToken, validateCsrfToken, getCsrfTokenFromRequest } from '../../../../lib/csrf';

// Check authentication
const authResult = await requireAuth(Astro);
if (isRedirect(authResult)) return authResult;
const user = authResult;

const id = parseInt(Astro.params.id);

// Get existing collection
const collection = await db.select().from(Collections).where(eq(Collections.id, id)).then(rows => rows[0]);

if (!collection) {
	return Astro.redirect('/admin/collections');
}

// Get all coins for this collection, ordered by sortOrder
const coins = await db
	.select()
	.from(Coins)
	.where(eq(Coins.collectionId, id))
	.orderBy(Coins.sortOrder);

const errors = {};
let formData = {
	name: collection.name,
	slug: collection.slug,
	description: collection.description,
	thumbnail: collection.thumbnail
};
let csrfToken = generateCsrfToken();

if (Astro.request.method === 'POST') {
	try {
		const data = await Astro.request.formData();

		// Validate CSRF token
		if (!validateCsrfToken(getCsrfTokenFromRequest(data))) {
			errors.general = 'Invalid form submission. Please try again.';
		} else {
			formData = {
				name: data.get('name') as string,
				slug: data.get('slug') as string,
				description: data.get('description') as string,
				thumbnail: data.get('thumbnail') as string
			};

			// Basic validation
			if (!formData.name) errors.name = 'Name is required';
			if (!formData.slug) errors.slug = 'Slug is required';
			if (!formData.description) errors.description = 'Description is required';
			if (!formData.thumbnail) errors.thumbnail = 'Thumbnail filename is required';

			// If no errors, update in database
			if (Object.keys(errors).length === 0) {
				await db.update(Collections).set({
					name: formData.name,
					slug: formData.slug,
					description: formData.description,
					thumbnail: formData.thumbnail
				}).where(eq(Collections.id, id));

				return Astro.redirect('/admin/collections');
			}
		}
	} catch (error) {
		console.error('Error updating collection:', error);
		errors.general = 'An error occurred while updating the collection';
	}
}
---

<AdminLayout title={`Edit Collection: ${collection.name}`}>
	<div class="page-header">
		<h1>Edit Collection</h1>
		<div class="header-actions">
			<a href={`/collections/${collection.slug}`} target="_blank" class="btn btn-outline">
				üëÅÔ∏è View Collection
			</a>
			<a href="/admin/collections" class="btn btn-outline">‚Üê Back to Collections</a>
		</div>
	</div>

	<form method="POST" class="admin-form">
		<input type="hidden" name="_csrf" value={csrfToken} />
		{errors.general && (
			<div class="alert alert-error">
				{errors.general}
			</div>
		)}

		<div class="form-group">
			<label for="name">Collection Name *</label>
			<input
				type="text"
				id="name"
				name="name"
				value={formData.name}
				placeholder="e.g. Ancient Roman Coins"
				required
				class={errors.name ? 'error' : ''}
			/>
			{errors.name && <span class="error-text">{errors.name}</span>}
		</div>

		<div class="form-group">
			<label for="slug">Slug *</label>
			<input
				type="text"
				id="slug"
				name="slug"
				value={formData.slug}
				placeholder="e.g. ancient-roman"
				required
				pattern="[a-z0-9-]+"
				class={errors.slug ? 'error' : ''}
			/>
			<small>Lowercase letters, numbers, and hyphens only. Used in URLs.</small>
			{errors.slug && <span class="error-text">{errors.slug}</span>}
		</div>

		<HtmlEditor
			inputId="description"
			label="Description *"
			initialValue={formData.description}
			placeholder="Describe this collection..."
			rows={4}
		/>

		<ImageUploadField
			inputId="thumbnail"
			label="Thumbnail"
			required={true}
			imageType="collections"
			initialValue={formData.thumbnail}
			error={errors.thumbnail}
		/>

		<div class="form-actions">
			<button type="submit" class="btn btn-primary">
				Update Collection
			</button>
			<a href="/admin/collections" class="btn btn-outline">
				Cancel
			</a>
			<button
				type="button"
				class="btn btn-danger"
				onclick={`deleteCollection(${collection.id}, '${collection.name}')`}
			>
				Delete Collection
			</button>
		</div>
	</form>

	<div class="collection-info">
		<h3>üìä Collection Stats</h3>
		<div class="stats-grid">
			<div class="stat">
				<strong>ID:</strong> {collection.id}
			</div>
			<div class="stat">
				<strong>Created:</strong> {new Date(collection.createdAt).toLocaleString()}
			</div>
			<div class="stat">
				<strong>Current URL:</strong>
				<a href={`/collections/${collection.slug}`} target="_blank">
					/collections/{collection.slug}
				</a>
			</div>
		</div>
	</div>

	<div class="coins-section">
		<div class="coins-header">
			<h3>ü™ô Coins in Collection ({coins.length})</h3>
			<p class="coins-instructions">Drag and drop coins to reorder them. Changes are saved automatically.</p>
		</div>

		{coins.length === 0 ? (
			<div class="empty-state">
				<p>No coins in this collection yet.</p>
				<a href="/admin/coins/new" class="btn btn-primary">Add Coin</a>
			</div>
		) : (
			<div class="coins-list" id="sortable-list">
				{coins.map((coin, index) => (
					<div class="coin-item" data-id={coin.id}>
						<div class="drag-handle">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<line x1="8" y1="6" x2="16" y2="6"></line>
								<line x1="8" y1="12" x2="16" y2="12"></line>
								<line x1="8" y1="18" x2="16" y2="18"></line>
							</svg>
						</div>
						<div class="coin-image">
							<img
								src={getImageUrl(coin.primaryImage, 'coins')}
								alt={coin.name}
								onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
							/>
							<div class="image-placeholder" style="display: none;">
								ü™ô
							</div>
						</div>
						<div class="coin-info-row">
							<strong>{coin.name}</strong>
							{coin.year && <span class="coin-year">{coin.year}</span>}
						</div>
						<div class="coin-actions">
							<a href={`/admin/coins/edit/${coin.id}`} class="btn btn-sm btn-outline" title="Edit coin">
								‚úèÔ∏è
							</a>
						</div>
						<div class="coin-order">
							<span class="order-number">{index + 1}</span>
						</div>
					</div>
				))}
			</div>
		)}

		<div class="save-status" id="save-status"></div>
	</div>
</AdminLayout>

