<script is:inline>
	function deleteCollection(id, name) {
		if (confirm(`Are you sure you want to delete the collection "${name}"? This will also delete all associated coins and images.`)) {
			fetch(`/admin/api/collections/${id}`, {
				method: 'DELETE',
			})
			.then(response => {
				if (response.ok) {
					window.location.href = '/admin/collections';
				} else {
					alert('Error deleting collection');
				}
			})
			.catch(error => {
				alert('Error deleting collection');
			});
		}
	}

	// Auto-generate slug from name
	document.getElementById('name').addEventListener('input', function(e) {
		const slug = e.target.value
			.toLowerCase()
			.replace(/[^a-z0-9\s-]/g, '')
			.replace(/\s+/g, '-')
			.replace(/-+/g, '-')
			.trim();
		document.getElementById('slug').value = slug;
	});

	// Drag and drop reordering for coins
	const list = document.getElementById('sortable-list');
	const statusEl = document.getElementById('save-status');
	let draggedItem = null;

	if (list) {
		const items = list.querySelectorAll('.coin-item');

		items.forEach(item => {
			item.setAttribute('draggable', 'true');

			item.addEventListener('dragstart', handleDragStart);
			item.addEventListener('dragend', handleDragEnd);
			item.addEventListener('dragover', handleDragOver);
			item.addEventListener('drop', handleDrop);
			item.addEventListener('dragleave', handleDragLeave);
		});
	}

	function handleDragStart(e) {
		draggedItem = e.currentTarget;
		draggedItem.classList.add('dragging');
		e.dataTransfer.effectAllowed = 'move';
		e.dataTransfer.setData('text/plain', '');
	}

	function handleDragEnd(e) {
		e.currentTarget.classList.remove('dragging');
		draggedItem = null;

		document.querySelectorAll('.drag-over').forEach(item => {
			item.classList.remove('drag-over');
		});

		updateOrderNumbers();
		saveOrder();
	}

	function handleDragOver(e) {
		e.preventDefault();
		e.dataTransfer.dropEffect = 'move';

		const item = e.currentTarget;
		if (item !== draggedItem) {
			item.classList.add('drag-over');

			const rect = item.getBoundingClientRect();
			const midY = rect.top + rect.height / 2;

			if (e.clientY < midY) {
				item.parentNode.insertBefore(draggedItem, item);
			} else {
				item.parentNode.insertBefore(draggedItem, item.nextSibling);
			}
		}
	}

	function handleDrop(e) {
		e.preventDefault();
		e.currentTarget.classList.remove('drag-over');
	}

	function handleDragLeave(e) {
		e.currentTarget.classList.remove('drag-over');
	}

	function updateOrderNumbers() {
		if (!list) return;
		const items = list.querySelectorAll('.coin-item');
		items.forEach((item, index) => {
			const orderEl = item.querySelector('.order-number');
			if (orderEl) {
				orderEl.textContent = index + 1;
			}
		});
	}

	async function saveOrder() {
		if (!list) return;
		const items = list.querySelectorAll('.coin-item');
		const coinOrder = Array.from(items).map(item => parseInt(item.dataset.id));

		showStatus('Saving...', 'saving');

		try {
			const response = await fetch('/admin/api/coins/reorder', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify({ coinOrder })
			});

			if (response.ok) {
				showStatus('Saved!', 'saved');
			} else {
				showStatus('Error saving', 'error');
			}
		} catch (error) {
			console.error('Error saving order:', error);
			showStatus('Error saving', 'error');
		}
	}

	function showStatus(message, type) {
		if (!statusEl) return;
		statusEl.textContent = message;
		statusEl.className = 'save-status ' + type;

		if (type === 'saved') {
			setTimeout(() => {
				statusEl.className = 'save-status';
			}, 2000);
		}
	}
</script>