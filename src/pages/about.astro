---
import Layout from '../layouts/Layout.astro';
import { db, Pages, eq } from 'astro:db';
import { marked } from 'marked';

export const prerender = false;

// Get page content from database
const page = await db.select().from(Pages).where(eq(Pages.slug, 'about')).then(rows => rows[0]);

// If page doesn't exist or isn't published, show 404
if (!page || !page.isPublished) {
	return Astro.redirect('/404');
}

// Convert markdown to HTML
const contentHtml = await marked(page.content);
---

<Layout title={page.metaTitle || page.title} description={page.metaDescription || page.description || ''}>
	<article class="about-page">
		{page.heroImage && (
			<div class="hero-image">
				<img src={page.heroImage} alt={page.title} />
			</div>
		)}
		<div class="prose">
			<h1>{page.title}</h1>
			<div class="content" set:html={contentHtml} />
		</div>
	</article>
</Layout>

<style>
	.about-page {
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	.hero-image {
		margin-bottom: 2rem;
	}

	.hero-image img {
		width: 100%;
		max-height: 400px;
		object-fit: cover;
		border-radius: 12px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
	}

	.prose {
		max-width: 720px;
		margin: 0 auto;
	}

	.prose h1 {
		margin-bottom: 1.5rem;
		text-align: center;
	}

	.content :global(h2) {
		margin-top: 2.5rem;
		margin-bottom: 1rem;
	}

	.content :global(h3) {
		margin-top: 2rem;
		margin-bottom: 0.75rem;
	}

	.content :global(p) {
		margin-bottom: 1.25rem;
		line-height: 1.8;
	}

	.content :global(em) {
		font-style: italic;
	}

	.content :global(strong) {
		font-weight: 600;
	}

	.content :global(ul), .content :global(ol) {
		margin-bottom: 1.25rem;
		padding-left: 1.5rem;
	}

	.content :global(li) {
		margin-bottom: 0.5rem;
	}
</style>
