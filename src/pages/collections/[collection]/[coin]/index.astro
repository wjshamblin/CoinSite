---
// Individual coin page - shows all 5 images with titles for a specific coin
import Layout from '../../../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { db, Collections, Coins, Images, eq, and } from 'astro:db';

export const prerender = false;

// Server-side rendering - get collection and coin by slug from URL params
const { collection: collectionSlug, coin: coinSlug } = Astro.params;

// Find the collection by slug
const collections = await db
	.select()
	.from(Collections)
	.where(eq(Collections.slug, collectionSlug));

if (collections.length === 0) {
	return new Response('Collection not found', { status: 404 });
}

const collection = collections[0];

// Find the coin by slug within this collection
const coins = await db
	.select()
	.from(Coins)
	.where(and(eq(Coins.slug, coinSlug), eq(Coins.collectionId, collection.id)));

if (coins.length === 0) {
	return new Response('Coin not found', { status: 404 });
}

const coin = coins[0];

// Get all images for this coin
const images = await db
	.select()
	.from(Images)
	.where(eq(Images.coinId, coin.id))
	.orderBy(Images.sortOrder);
---

<Layout title={`${coin.name} - ${collection.name}`}>
	<main>
		<nav class="breadcrumb">
			<a href="/collections">Collections</a> /
			<a href={`/collections/${collection.slug}`}>{collection.name}</a> /
			<span>{coin.name}</span>
		</nav>

		<div class="coin-header">
			<h1>{coin.name}</h1>
			{coin.year && <p class="coin-year">Year: {coin.year}</p>}
			{coin.condition && <p class="coin-detail">Condition: {coin.condition}</p>}
			{coin.mintage && <p class="coin-detail">Mintage: {coin.mintage}</p>}
		</div>

		{coin.description && (
			<div class="coin-description">
				<p>{coin.description}</p>
			</div>
		)}

		<div class="images-gallery">
			{images.map((image, index) => (
				<div class="image-container">
					<Image
						src={`/images/coins/${image.filename}`}
						alt={image.alt}
						width={400}
						height={300}
						class="coin-image"
						loading="lazy"
					/>
					<div class="image-info">
						<h3 class="image-title">{image.title}</h3>
						{image.description && (
							<p class="image-description">{image.description}</p>
						)}
					</div>
				</div>
			))}
		</div>

		<div class="coin-metadata">
			<h3>Coin Details</h3>
			<dl class="details-grid">
				{coin.year && (
					<>
						<dt>Year</dt>
						<dd>{coin.year}</dd>
					</>
				)}
				{coin.condition && (
					<>
						<dt>Condition</dt>
						<dd>{coin.condition}</dd>
					</>
				)}
				{coin.mintage && (
					<>
						<dt>Mintage</dt>
						<dd>{coin.mintage}</dd>
					</>
				)}
			</dl>
		</div>
	</main>
</Layout>

<style>
	.breadcrumb {
		margin-bottom: 1rem;
		font-size: 0.9rem;
	}

	.breadcrumb a {
		color: #0066cc;
		text-decoration: none;
	}

	.breadcrumb a:hover {
		text-decoration: underline;
	}

	.coin-header {
		margin-bottom: 2rem;
	}

	.coin-header h1 {
		margin-bottom: 0.5rem;
	}

	.coin-year {
		font-size: 1.1rem;
		color: #666;
		margin: 0.25rem 0;
	}

	.coin-detail {
		color: #666;
		margin: 0.25rem 0;
	}

	.coin-description {
		margin-bottom: 2rem;
		padding: 1.5rem;
		background: #f9f9f9;
		border-radius: 8px;
		line-height: 1.6;
	}

	.images-gallery {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin: 2rem 0;
	}

	.image-container {
		border: 1px solid #ddd;
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 2px 8px rgba(0,0,0,0.1);
	}

	.coin-image {
		width: 100%;
		height: 300px;
		object-fit: cover;
		display: block;
	}

	.image-info {
		padding: 1rem;
	}

	.image-title {
		margin: 0 0 0.5rem 0;
		color: #333;
		font-size: 1.1rem;
	}

	.image-description {
		color: #666;
		font-size: 0.9rem;
		line-height: 1.4;
		margin: 0;
	}

	.coin-metadata {
		margin-top: 3rem;
		padding: 1.5rem;
		background: #f9f9f9;
		border-radius: 8px;
	}

	.coin-metadata h3 {
		margin-top: 0;
		color: #333;
	}

	.details-grid {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 0.5rem 1rem;
		margin: 0;
	}

	.details-grid dt {
		font-weight: bold;
		color: #555;
	}

	.details-grid dd {
		margin: 0;
		color: #666;
	}
</style>