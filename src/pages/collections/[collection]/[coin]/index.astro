// Individual coin page - shows all 5 images with titles for a specific coin
import Layout from '../../../../layouts/Layout.astro';
import { db, Collections, Coins, Images, eq, and } from 'astro:db';
import { getImageUrl } from '../../../../lib/images';

export const prerender = false;

// Server-side rendering - get collection and coin by slug from URL params
const { collection: collectionSlug, coin: coinSlug } = Astro.params;

// Find the collection by slug
const collections = await db
	.select()
	.from(Collections)
	.where(eq(Collections.slug, collectionSlug));

if (collections.length === 0) {
	return new Response('Collection not found', { status: 404 });
}

const collection = collections[0];

// Find the coin by slug within this collection
const coins = await db
	.select()
	.from(Coins)
	.where(and(eq(Coins.slug, coinSlug), eq(Coins.collectionId, collection.id)));

if (coins.length === 0) {
	return new Response('Coin not found', { status: 404 });
}

const coin = coins[0];

// Get all images for this coin from the Images table
const images = await db
	.select()
	.from(Images)
	.where(eq(Images.coinId, coin.id))
	.orderBy(Images.sortOrder);

// Get the primary image URL from coin.primaryImage field
const primaryImageUrl = coin.primaryImage
	? getImageUrl(coin.primaryImage, 'coins')
	: images[0]
		? getImageUrl(images[0].filename, 'coins')
		: null;

// Find matching image in Images table for alt text
const primaryImageFromTable = coin.primaryImage
	? images.find(img => getImageUrl(img.filename, 'coins') === getImageUrl(coin.primaryImage, 'coins'))
	: images[0];
const primaryImageAlt = primaryImageFromTable?.alt || coin.name;

// Gallery shows all images except the primary
const galleryImages = primaryImageFromTable
	? images.filter(img => img.id !== primaryImageFromTable.id)
	: images;

// Get all coins in this collection to find next/prev
const allCoinsInCollection = await db
	.select()
	.from(Coins)
	.where(eq(Coins.collectionId, collection.id))
	.orderBy(Coins.sortOrder);

// Find current coin index and get next coin
const currentIndex = allCoinsInCollection.findIndex(c => c.id === coin.id);
const nextCoin = currentIndex < allCoinsInCollection.length - 1
	? allCoinsInCollection[currentIndex + 1]
	: allCoinsInCollection[0]; // Wrap to first coin
---

<Layout title={`${coin.name} - ${collection.name}`}>
	<!-- Breadcrumb -->
	<nav class="breadcrumb" aria-label="Breadcrumb">
		<a href="/collections">Collections</a>
		<span class="separator">/</span>
		<a href={`/collections/${collection.slug}`}>{collection.name}</a>
		<span class="separator">/</span>
		<span class="current">{coin.name}</span>
	</nav>

	<!-- Coin Title -->
	<header class="coin-header">
		<h1>{coin.name}</h1>
	</header>

	<!-- Primary Image -->
	{primaryImageUrl && (
		<section class="primary-image-section">
			<div class="primary-image-wrapper">
				<img
					src={primaryImageUrl}
					alt={primaryImageAlt}
					class="primary-coin-image"
					loading="eager"
				/>
				<button class="zoom-btn" aria-label="Zoom image" data-image={primaryImageUrl}>
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<circle cx="11" cy="11" r="8"/>
						<path d="m21 21-4.35-4.35"/>
						<path d="M11 8v6M8 11h6"/>
					</svg>
				</button>
			</div>
		</section>
	)}

	<!-- Coin Details Box (description with formatted content) -->
	{coin.description && (
		<section class="coin-details-box">
			<h2>Coin Details</h2>
			<div class="coin-description prose">
				<Fragment set:html={coin.description} />
			</div>
			{(coin.year || coin.condition || coin.mintage) && (
				<div class="coin-specs">
					{coin.year && (
						<div class="spec-item">
							<span class="spec-label">Year:</span>
							<span class="spec-value">{coin.year}</span>
						</div>
					)}
					{coin.condition && (
						<div class="spec-item">
							<span class="spec-label">Condition:</span>
							<span class="spec-value">{coin.condition}</span>
						</div>
					)}
					{coin.mintage && (
						<div class="spec-item">
							<span class="spec-label">Mintage:</span>
							<span class="spec-value">{coin.mintage}</span>
						</div>
					)}
				</div>
			)}
		</section>
	)}

	<!-- Image Gallery (remaining images) -->
	{galleryImages.length > 0 && (
		<section class="gallery-section">
			<h2>Gallery</h2>
			<div class="images-gallery">
				{galleryImages.map((image) => (
					<figure class="image-card">
						<div class="image-wrapper">
							<img
								src={getImageUrl(image.filename, 'coins')}
								alt={image.alt}
								width="500"
								height="400"
								class="coin-image"
								loading="lazy"
							/>
							<button class="zoom-btn" aria-label="Zoom image" data-image={getImageUrl(image.filename, 'coins')}>
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<circle cx="11" cy="11" r="8"/>
									<path d="m21 21-4.35-4.35"/>
									<path d="M11 8v6M8 11h6"/>
								</svg>
							</button>
						</div>
						<figcaption>
							<h3>{image.title}</h3>
							{image.description && <p>{image.description}</p>}
						</figcaption>
					</figure>
				))}
			</div>
		</section>
	)}

	<!-- Collection Link -->
	<section class="collection-link-section">
		<span class="collection-label">Collection</span>
		<a href={`/collections/${collection.slug}`} class="collection-name">{collection.name}</a>
	</section>

	<!-- Navigation -->
	<nav class="coin-nav">
		<a href={`/collections/${collection.slug}`} class="back-link">
			<svg width="16" height="16" viewBox="0 0 16 16" fill="none">
				<path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
			</svg>
			Back to {collection.name}
		</a>
		{nextCoin && nextCoin.id !== coin.id && (
			<a href={`/collections/${collection.slug}/${nextCoin.slug}`} class="next-link">
				Next coin in {collection.name}
				<svg width="16" height="16" viewBox="0 0 16 16" fill="none">
					<path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</a>
		)}
	</nav>
</Layout>

<!-- Image Lightbox -->
<div class="lightbox" id="lightbox" aria-hidden="true">
	<button class="lightbox-close" aria-label="Close">&times;</button>
	<img src="" alt="" class="lightbox-image" />
</div>

<script>
	// Lightbox functionality
	const lightbox = document.getElementById('lightbox');
	const lightboxImage = lightbox?.querySelector('.lightbox-image') as HTMLImageElement;
	const closeBtn = lightbox?.querySelector('.lightbox-close');
	const zoomBtns = document.querySelectorAll('.zoom-btn');

	zoomBtns.forEach(btn => {
		btn.addEventListener('click', () => {
			const imageSrc = btn.getAttribute('data-image');
			if (imageSrc && lightboxImage && lightbox) {
				lightboxImage.src = imageSrc;
				lightbox.classList.add('active');
				lightbox.setAttribute('aria-hidden', 'false');
				document.body.style.overflow = 'hidden';
			}
		});
	});

	closeBtn?.addEventListener('click', closeLightbox);
	lightbox?.addEventListener('click', (e) => {
		if (e.target === lightbox) closeLightbox();
	});

	document.addEventListener('keydown', (e) => {
		if (e.key === 'Escape') closeLightbox();
	});

	function closeLightbox() {
		lightbox?.classList.remove('active');
		lightbox?.setAttribute('aria-hidden', 'true');
		document.body.style.overflow = '';
	}
</script>

<style>
	/* Breadcrumb */
	.breadcrumb {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.9375rem;
		margin-bottom: 2rem;
		color: rgb(var(--gray));
	}

	.breadcrumb a {
		color: var(--gold-dark);
		text-decoration: none;
		transition: color var(--transition-fast);
	}

	.breadcrumb a:hover {
		color: var(--accent-dark);
		text-decoration: underline;
	}

	.separator {
		color: rgb(var(--gray-light));
	}

	.current {
		color: var(--navy);
		font-weight: 500;
	}

	/* Coin Header */
	.coin-header {
		margin-bottom: 2rem;
	}

	.coin-header h1 {
		margin-bottom: 0;
		font-size: clamp(2rem, 5vw, 3rem);
	}

	/* Primary Image Section */
	.primary-image-section {
		margin-bottom: 2rem;
		text-align: center;
	}

	.primary-image-wrapper {
		position: relative;
		display: inline-block;
		max-width: 100%;
		background: white;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: var(--shadow-md);
	}

	.primary-coin-image {
		display: block;
		max-width: 100%;
		max-height: 500px;
		width: auto;
		height: auto;
		object-fit: contain;
		background: #f5f5f0;
	}

	.primary-image-wrapper .zoom-btn {
		position: absolute;
		bottom: 1rem;
		right: 1rem;
		width: 44px;
		height: 44px;
		background: rgba(255, 255, 255, 0.95);
		border: none;
		border-radius: 8px;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transform: translateY(10px);
		transition: all var(--transition-fast);
		box-shadow: var(--shadow-md);
		color: var(--navy);
	}

	.primary-image-wrapper:hover .zoom-btn {
		opacity: 1;
		transform: translateY(0);
	}

	.primary-image-wrapper .zoom-btn:hover {
		background: var(--gold);
		color: white;
	}

	/* Coin Details Box */
	.coin-details-box {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		margin-bottom: 3rem;
		box-shadow: var(--shadow-sm);
		border-left: 4px solid var(--gold);
	}

	.coin-details-box h2 {
		margin-bottom: 1.25rem;
		font-size: 1.5rem;
	}

	.coin-description {
		margin-bottom: 1.5rem;
	}

	.coin-description :global(p) {
		margin: 0 0 1rem 0;
		color: rgb(var(--gray-dark));
		line-height: 1.75;
		font-size: 1.0625rem;
	}

	.coin-description :global(p:last-child) {
		margin-bottom: 0;
	}

	.coin-description :global(a) {
		color: var(--gold-dark);
		text-decoration: underline;
	}

	.coin-description :global(a:hover) {
		color: var(--accent-dark);
	}

	.coin-description :global(strong) {
		font-weight: 600;
		color: var(--navy);
	}

	.coin-description :global(ul),
	.coin-description :global(ol) {
		margin: 0 0 1rem 0;
		padding-left: 1.5rem;
		color: rgb(var(--gray-dark));
	}

	.coin-description :global(li) {
		margin-bottom: 0.5rem;
		line-height: 1.75;
	}

	.coin-specs {
		display: flex;
		flex-wrap: wrap;
		gap: 1.5rem;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(0, 0, 0, 0.08);
	}

	.spec-item {
		display: flex;
		gap: 0.5rem;
	}

	.spec-label {
		font-weight: 600;
		color: var(--navy);
	}

	.spec-value {
		color: rgb(var(--gray-dark));
	}

	/* Gallery Section */
	.gallery-section {
		margin-bottom: 3rem;
	}

	.gallery-section h2 {
		margin-bottom: 1.5rem;
		font-size: 1.5rem;
	}

	.images-gallery {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.image-card {
		background: white;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: var(--shadow-md);
		transition: all var(--transition-base);
		margin: 0;
	}

	.image-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-lg);
	}

	.image-wrapper {
		position: relative;
		overflow: hidden;
	}

	.coin-image {
		width: 100%;
		height: auto;
		max-height: 500px;
		object-fit: contain;
		display: block;
		transition: transform var(--transition-slow);
		background: #f5f5f0;
	}

	.image-card:hover .coin-image {
		transform: scale(1.03);
	}

	.zoom-btn {
		position: absolute;
		bottom: 1rem;
		right: 1rem;
		width: 40px;
		height: 40px;
		background: rgba(255, 255, 255, 0.95);
		border: none;
		border-radius: 8px;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transform: translateY(10px);
		transition: all var(--transition-fast);
		box-shadow: var(--shadow-md);
		color: var(--navy);
	}

	.image-card:hover .zoom-btn {
		opacity: 1;
		transform: translateY(0);
	}

	.zoom-btn:hover {
		background: var(--gold);
		color: white;
	}

	.image-card figcaption {
		padding: 1.25rem;
	}

	.image-card h3 {
		margin: 0 0 0.5rem 0;
		font-size: 1.125rem;
		color: var(--navy);
	}

	.image-card figcaption p {
		color: rgb(var(--gray));
		font-size: 0.875rem;
		line-height: 1.5;
		margin: 0;
	}

	/* Collection Link Section */
	.collection-link-section {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
		padding: 1.5rem 2rem;
		background: white;
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
		margin-bottom: 2rem;
	}

	.collection-label {
		font-size: 0.8125rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: rgb(var(--gray));
	}

	.collection-name {
		font-size: 1.125rem;
		color: var(--gold-dark);
		font-weight: 500;
		text-decoration: none;
	}

	.collection-name:hover {
		text-decoration: underline;
	}

	/* Coin Navigation */
	.coin-nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
		margin-top: 3rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(0, 0, 0, 0.08);
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--gold-dark);
		font-weight: 600;
		text-decoration: none;
		transition: gap var(--transition-fast);
	}

	.back-link:hover {
		gap: 0.75rem;
	}

	.next-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--gold-dark);
		font-weight: 600;
		text-decoration: none;
		transition: gap var(--transition-fast);
	}

	.next-link:hover {
		gap: 0.75rem;
	}

	/* Lightbox */
	.lightbox {
		position: fixed;
		inset: 0;
		z-index: 1000;
		background: rgba(0, 0, 0, 0.9);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		visibility: hidden;
		transition: all var(--transition-base);
	}

	.lightbox.active {
		opacity: 1;
		visibility: visible;
	}

	.lightbox-close {
		position: absolute;
		top: 1.5rem;
		right: 1.5rem;
		width: 48px;
		height: 48px;
		background: rgba(255, 255, 255, 0.1);
		border: none;
		border-radius: 50%;
		color: white;
		font-size: 2rem;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: background var(--transition-fast);
	}

	.lightbox-close:hover {
		background: rgba(255, 255, 255, 0.2);
	}

	.lightbox-image {
		max-width: 90vw;
		max-height: 90vh;
		object-fit: contain;
		border-radius: 8px;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.breadcrumb {
			font-size: 0.875rem;
		}

		.coin-meta {
			gap: 1rem;
		}

		.images-gallery {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.coin-image {
			height: 220px;
		}

		.details-section {
			padding: 1.5rem;
		}

		.details-list {
			grid-template-columns: 1fr;
		}
	}
</style>
